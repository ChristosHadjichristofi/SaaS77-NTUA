<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>
        <%= pageTitle %>
    </title>
    <link rel="stylesheet" href="/assets/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/assets/fonts/font-awesome.min.css">
    <link rel="stylesheet" href="/assets/css/Footer-Basic.css">
    <link rel="stylesheet" href="/assets/css/NZDropdown---Status.css">
    <link rel="stylesheet" href="/assets/css/styles.css">
    <link rel="stylesheet" href="/assets/css/navbar.css">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css">
</head>

<body>
    <div id="main-div">

        <%- include("includes/navbar.ejs")%>

        <div class="container" id="main-screen-cards">

            <h2 id="message" style="color: var(--blue);">
                <strong><a href="/questions/show"><i class="fa fa-arrow-circle-left" style="color: cadetblue;"></i></a> <%= question.title %></strong>
            </h2>
            <div class="card shadow" id="question-card" style="background: rgba(149,165,166,0.5);">
                <div class="show-mobile">
                    <div class="card-body" id="question-card-body" style="padding-left: 40px; padding-right: 40px;">
                        <div class="row" style="padding-bottom: 30px;">
                            <div class="col-2">
                                <span><img class="rounded-circle" src="https://eu.ui-avatars.com/api/<%=question.name %> <%=question.surname %>"></span>
                            </div>
                            <div class="col-8" style="padding-left: 30px;">
                                <h5 style="color: var(--blue);">
                                    <%= question.name %>
                                    <%= question.surname %>
                                </h5>
                                <h6 class="text-muted mb-2" style="color: var(--blue);">Posted at:<br>
                                    <%= question.dateCreated %>
                                </h6>
                            </div>
                            <div class="col-1" style="margin-right: 20px;">
                                <label class="col-form-label" id="answers-counter"><%= totalAnswers %></label>
                            </div>
                        </div>
                        <div class="row d-sm-flex flex-row justify-content-sm-center align-items-sm-center" style="justify-content: center;">
                            <h4 class="overflow-auto" style="color: var(--blue);">
                                <%= question.title %>
                            </h4>
                        </div>
                        <div class="row d-sm-flex flex-row justify-content-sm-center align-items-sm-center">
                            <p class="text-left overflow-auto" style="color: var(--blue); white-space: pre-line">
                                <%= question.text %>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="hide-mobile">
                    <div class="card-body" id="question-card-body">
                        <div class="row">
                            <div class="col col-md-3"><span><img class="rounded-circle" src="https://eu.ui-avatars.com/api/<%=question.name %> <%=question.surname %>"></span>
                                <h5 style="color: var(--blue);">
                                    <%= question.name %>
                                        <%= question.surname %>
                                </h5>
                                <h6 class="text-muted mb-2" style="color: var(--blue);">Posted at:<br>
                                    <%= question.dateCreated %>
                                </h6>
                            </div>
                            <div class="col d-lg-flex flex-column justify-content-lg-center align-items-lg-center col-md-8">
                                <h4 class="overflow-auto" style="color: var(--blue);">
                                    <%= question.title %>
                                </h4>
                                <p class="text-left overflow-auto" style="color: var(--blue); white-space: pre-line">
                                    <%= question.text %>
                                </p>
                            </div>
                            <div class="col d-lg-flex justify-content-lg-center align-items-lg-center">
                                <label class="col-form-label" id="answers-counter"><%= totalAnswers %></label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% if ( totalAnswers == 0 ) { %>
                <div class="card shadow" style="background: rgba(149,165,166,0.5); margin-top:10px;">
                    <div class="card-body" id="question-card-body">
                        <h5 style="color: var(--blue);">No answers found for this question</h5>
                    </div>
                </div>
            <% } else { %>
                <div id="answers-div" style="margin-top:20px">
                    <% answers.forEach((ans, index) => { %>
                        <% if (index == 0) { %>
                            <div class="card shadow" style="background: rgba(149,165,166,0.5);">
                        <% } else { %>
                            <div class="card shadow" style="background: rgba(149,165,166,0.5); margin-top:10px;">
                        <% } %>
                            <div class="show-mobile">
                                <div class="card-body" id="question-card-body" style="padding-left: 40px; padding-right: 40px;">
                                    <div class="row">
                                        <div class="col-2">
                                            <span><img class="rounded-circle" src="https://eu.ui-avatars.com/api/<%=ans.UsersName %> <%=ans.UsersSurname %>"></span>
                                        </div>
                                        <div class="col-8" style="padding-left: 30px;">
                                            <h5 style="color: var(--blue);">
                                                <%=ans.UsersName %>
                                                <%=ans.UsersSurname %>
                                            </h5>
                                            <h6 class="text-muted mb-2" style="color: var(--blue);">Replied at:<br>
                                                <%= ans.dateCreated %>
                                            </h6>
                                        </div>
                                    </div>
                                    <div class="row d-sm-flex flex-row justify-content-sm-center align-items-sm-center" id="answers-paragraph">
                                        <p class="text-left overflow-auto" style="color: var(--blue); white-space: pre-line">
                                            <%= ans.text %>
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="hide-mobile">
                                <div class="card-body" id="question-card-body">
                                    <div class="row">
                                        <div class="col col-md-3"><span><img class="rounded-circle" src="https://eu.ui-avatars.com/api/<%=ans.UsersName %> <%=ans.UsersSurname %>"></span>
                                            <h5 style="color: var(--blue);">
                                                <%=ans.UsersName %>
                                                    <%=ans.UsersSurname %>
                                            </h5>
                                            <h6 class="text-muted mb-2" style="color: var(--blue);">Replied at:<br>
                                                <%= ans.dateCreated %>
                                            </h6>
                                        </div>
                                        <div class="col d-lg-flex flex-column justify-content-lg-center align-items-lg-center col-md-9" id="answers-paragraph">
                                            <p class="text-left overflow-auto" style="color: var(--blue); white-space: pre-line">
                                                <%= ans.text %>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } %>

            <% if ( totalAnswers != 0 ) { %>
                <%- include("includes/pagination.ejs")%>
            <% } %>

            <div style="margin-top:30px; margin-bottom: 30px;">
                <div class="card shadow" id="answer-question-card" style="background: rgba(149,165,166,0.5);">
                    <div class="show-mobile">
                        <div class="card-body" id="question-card-body" style="padding-left: 40px; padding-right: 40px;">
                            <h3 style="color: var(--blue);">Leave an Answer</h3>
                            <div class="row" style="padding-top: 10px; padding-bottom: 20px;">
                                <div class="col-2">
                                    <span>
                                        <img class="rounded-circle" src="https://eu.ui-avatars.com/api/<%=loggedUser.name %> <%=loggedUser.surname %>"></span>
                                </div>
                                <div class="col-8" style="padding-top: 20px; margin-left: 30px;">
                                    <h5 style="color: var(--blue);">
                                        <%=loggedUser.name %>
                                        <%=loggedUser.surname %>
                                    </h5>
                                </div>
                            </div>
                            <form class="col d-lg-flex flex-column justify-content-lg-center align-items-lg-center col-md-9" method="POST" action="/questions/answer/<%= question.id %>">
                                <textarea id="answer-textarea" style="color: var(--blue);" name="answer" rows="8"></textarea>
                                <button class="btn btn-primary align-self-end" id="leave-answer-button" type="submit">Submit</button>
                            </form>
                        </div>
                    </div>
                    <div class="hide-mobile">
                        <div class="card-body" id="question-card-body">
                            <h3 style="color: var(--blue);">Leave an Answer</h3>
                            <div class="row">
                                <div class="col col-md-3">
                                    <span><img class="rounded-circle" src="https://eu.ui-avatars.com/api/<%=loggedUser.name %> <%=loggedUser.surname %>"></span>
                                    <h5 style="color: var(--blue);">
                                        <%=loggedUser.name %>
                                        <%=loggedUser.surname %>
                                    </h5>
                                    <h6 class="text-muted mb-2">
                                        <!-- here maybe add something-->
                                    </h6>
                                </div>
                                <form class="col d-lg-flex flex-column justify-content-lg-center align-items-lg-center col-md-9" method="POST" action="/questions/answer/<%= question.id %>">
                                    <textarea id="answer-textarea" style="color: var(--blue);" name="answer" rows="8"></textarea>
                                    <button class="btn btn-primary align-self-end" id="leave-answer-button" type="submit">Submit</button>
                                </form>
                            </div>
                        </div>
                    </div>
                    </div>
                </div>

            </div>
        </div>
        <div class="show-mobile" style="margin-bottom: 50px;"></div>

    <%- include("includes/footer.ejs")%>

        <script src="/assets/js/jquery.min.js"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>

        <script>
            $(document).ready(function() {
                toastr.options = {
                    "closeButton": true,
                    "positionClass": "toast-bottom-right",
                    "preventDuplicates": false
                };
                /* In order to access variables sent to ejs file to script you must Parse them to string */
                /* then to parse them back to JSON */
                let messages = '<%- JSON.stringify(messages) %>';
                messages = JSON.parse(messages);
                messages.forEach(({
                    type,
                    value
                }) => {
                    switch (type) {
                        case 'error':
                            toastr.error(value)
                            break;
                        case 'success':
                            toastr.success(value)
                            break;
                        case 'warning':
                            toastr.warning(value)
                            break;
                        default:
                            toastr.info(value)
                            break;
                    }
                });
            })
        </script>
        <script src="/assets/bootstrap/js/bootstrap.min.js"></script>
</body>

</html>